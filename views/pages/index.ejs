<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./parts/head %>
</head>
<body>
<div class="wrapper bg-light">
    <header class="container-fluid bg-primary d-flex py-2 justify-content-between align-items-center">
        <a href="/" class="text-white btn"><h4 class="my-0">Note<span class="text-warning">App</span></h4></a>
        <div class="d-flex">
            <a href="./notes/create" class="btn btn-light mx-2" id="btn-note">Create note</a>
            <a href="./lists/create" class="btn btn-light mx-2" id="btn-list">Create list</a>
        </div>

    </header>

    <main id="main" class="container-fluid d-flex p-4 flex-wrap">
                <% notes.forEach(function(note) { %>
        <div id="<%=note._id%>" class="card bg-warning text-white m-1" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= note.Title %></h5>
                <p class="card-text"><%= note.Content %></p>
                <a href="/notes/edit/" class="card-link btn edit-btn btn-success">Edit</a>
                <a href="#" class="card-link btn delete-btn btn-danger">Delete</a>
            </div>
        </div>
                <% }); %>
        <% lists.forEach(function(list) { %>
        <div id="<%=list._id%>" class="card bg-info text-white m-1" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= list.Title %></h5>
                <% for(let key in list) { %>
                <%if(key!=='Title' && key!=='_id'){%>
                    <div class="d-flex align-items-center mb-2"> <input type="checkbox"><p class="ml-3 my-0"><%=list[`${key}`]%></p></div>
                <%}}%>
                <a href="/lists/edit" class="card-link btn edit-btn btn-success">Edit</a>
                <a href="#" class="card-link btn delete-btn btn-danger">Delete</a>
            </div>
        </div>
        <% }); %>
    </main>

    <% include ./parts/footer %>


</div>

<% include ./parts/scripts %>

</body>
</html>