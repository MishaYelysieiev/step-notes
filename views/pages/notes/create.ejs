<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../parts/head %>

</head>
<body>
<div class="wrapper bg-light min-vh-100">
    <header class="container-fluid bg-primary d-flex py-2 justify-content-between align-items-center">
        <a href="#" class="text-white btn"><h4 class="my-0">Note<span class="text-warning">App</span></h4></a>
        <div class="d-flex">
            <a href="/" class="btn btn-warning mx-2">Go home</a>
        </div>

    </header>

    <main id="main" class="container-fluid d-flex p-4 d-flex flex-direction-column justify-content-center align-items-center">
<!--        <h3 class="text-danger text-center mt-10">Место для формы создания заметки <span class="text-secondary">(и вашей рекламы)</span></h3>-->

        <form action="/notes/create" class=" p-5" id="note-form">
            <div class="form-group">
                <label for="note-title" class="control-label"></label>
                <input id="note-title" class="form-control" type="text" name="title" required>
            </div>
            <div class="form-group">
                <label for="note-content" class="control-label"></label>
                <textarea id="note-content" class="form-control" cols="30" rows="10" name="content" required></textarea>
            </div>
            <div class="form-group">
                <button id="create-note" class="btn btn-warning font-size-1.2" type="submit">Create</button>
            </div>
        </form>
    </main>

    <% include ../parts/footer %>


</div>

<% include ../parts/scripts %>
<script>
    $("#note-form").submit(function (e) {

        e.preventDefault();
        $.ajax({
            type: "POST",
            url: $("#note-form").attr("action"),
            data: {
                Title: $("#note-title").val(),
                Content: $("#note-content").val()
            },
            success: function (response) {
                window.location = "/";
            },
            error: function (response) {
                alert(response);
            }
        });
    });
</script>
</body>
</html>